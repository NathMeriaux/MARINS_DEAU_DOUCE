<h1><%= @boat.name %> is currently available during the following periods:</h1>

<ul>
  <% @availabilities.each do |av| %>
    <li>
      <%= av.start_date %> - <%= av.end_date %>
      <%= link_to 'Edit', edit_boat_availability_path(@boat, av) %>
      <%= link_to "Delete", boat_availability_path(@boat, av),
      method: :delete,
      data: { confirm: "Are you sure?" } %>
    </li>
  <% end %>
</ul>
